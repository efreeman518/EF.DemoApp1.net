<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Make sure the project is packable -->
    <IsPackable>true</IsPackable>

    <!-- Ensure the build output is included -->
    <IncludeBuildOutput>true</IncludeBuildOutput>

    <PackageId>Package.Infrastructure.Common.Contracts</PackageId>
    <Authors>E. Freeman</Authors>
    <Description>Common Contracts for the infrastructure</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    <!-- Add this to ensure the assembly is packed -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <!-- Optional, but helps verify packing -->
    
  </PropertyGroup>

</Project>
